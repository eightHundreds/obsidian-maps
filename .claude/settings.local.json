{
  "permissions": {
    "allow": [
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(find:*)",
      "mcp__plugin_oh-my-claudecode",
      "Bash(node:*)",
      "Bash(xargs ls:*)",
      "Bash(git add:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "filesystem",
    "exa"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/oxlint-fix.sh"
          }
        ]
      }
    ]
  }
}
